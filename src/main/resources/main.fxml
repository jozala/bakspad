<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="446.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="pl.aetas.bakspad.presentation.controller.MainController">
    <children>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu text="Plik">
                    <items>
                        <MenuItem onAction="#handleAddNewEntryAction" text="Dodaj"/>
                        <MenuItem onAction="#handleSaveSelectedNoteAction" text="Zapisz"/>
                        <MenuItem onAction="#handleSaveAllNotesAction" text="Zapisz wszystkie"/>
                        <SeparatorMenuItem/>
                        <MenuItem onAction="#handleCloseApplicationAction" text="ZakoÅ„cz"/>
                    </items>
                </Menu>
                <Menu text="Pomoc">
                    <items>
                        <MenuItem text="O BaksPad"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane dividerPositions="0.293" focusTraversable="true" prefHeight="2000">
            <items>
                <AnchorPane prefHeight="426.0" prefWidth="230.0" SplitPane.resizableWithParent="false">
                    <children>
                        <TableView xmlns:fx="http://javafx.com/fxml" fx:id="notesTable" editable="true"
                                   prefHeight="354.0" prefWidth="226.0" AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="nameColumn" onEditCommit="#handleNoteNameEditAction"
                                             prefWidth="86.0" text="Nazwa">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="name"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="descriptionColumn" onEditCommit="#handleNoteDescriptionEditAction"
                                             prefWidth="140.0" text="Opis">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="description"/>
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
                <AnchorPane>
                    <TextArea fx:id="contentTextArea" prefHeight="400.0" prefWidth="560.0" AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</VBox>
